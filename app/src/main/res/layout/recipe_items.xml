<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipeRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_grid_container_height"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recipeImageView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/recipe_grid_container_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_grid_container_height"
        android:background="@color/colorTransparentBlack"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipeTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recipe_item_text" />

        <TextView
            android:id="@+id/recipeServesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_item_text" />
    </LinearLayout>


</RelativeLayout>